@{
    ViewData["Title"] = "Arman";
}
@model dynamic

<div class="container">
    <div class="row">
        <div class="col">
            <h2>My Wish List</h2>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Item</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Item)
                    {
                        @if (@item.UserId == 1)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <th>@item.ItemName</th>
                            </tr>
                        }

                    }
                </tbody>
            </table>
            <a href="/Home/Adder" class="btn btn-primary float-right">Add Item</a>
        </div>
    </div>


    <div class="row">
        <div class="col-6">
            <h2>Arman's Wish List</h2>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Item</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Item)
                    {
                        @if (@item.UserId == 9)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <th>@item.ItemName</th>
                            </tr>
                        }

                    }
                </tbody>
            </table>
        </div>
        <div class="col-6">
            <h2>Dake's Wish List</h2>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
